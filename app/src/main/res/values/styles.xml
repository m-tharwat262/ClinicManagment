<?xml version="1.0" encoding="utf-8"?>
<resources>

    //////////////////////// for app themes   ///////////////
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModeStyle</item>
    </style>


    <style name="AppModeStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet</item>
    </style>


    ////////////////////// for login - createAccount - forgetPassword screens ///////////////////
    <style name="login_editText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/dialog_edit_text_background</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="login_icon_image_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>



    ///////////////////   for  navigation items (activity_main_xml) //////////////////

    <style name="cardView_for_navigation_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>