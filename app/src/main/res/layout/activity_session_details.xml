<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:id="@+id/activity_patient_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardPreventCornerOverlap="false"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_margin="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="vertical"
                android:gravity="center" >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/bottom_items_patients"
                    android:textColor="@color/color_white"
                    android:textSize="20sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="2dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/color_white">


                    <View
                        android:layout_width="88dp"
                        android:layout_height="3dp"/>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>





    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_patient_basic_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_patient_details_title"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_session_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="doctor name"/>

        <TextView
            android:id="@+id/activity_session_doctor_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="doctor id"/>

        <TextView
            android:id="@+id/activity_session_doctor_session_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="doctor session cost"/>

        <TextView
            android:id="@+id/activity_session_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="patient name"/>

        <TextView
            android:id="@+id/activity_session_patient_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="patient id "/>

        <TextView
            android:id="@+id/activity_session_patient_session_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="patient session cost"/>

        <TextView
            android:id="@+id/activity_session_disease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="disease"/>

        <TextView
            android:id="@+id/activity_session_session_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="session number"/>

        <TextView
            android:id="@+id/activity_session_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="notes"/>

        <TextView
            android:id="@+id/activity_session_added_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="added time"/>

        <TextView
            android:id="@+id/activity_session_added_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="added by"/>



    </LinearLayout>




</RelativeLayout>