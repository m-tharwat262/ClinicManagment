<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/final_primary_button"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="start"
        android:orientation="vertical" >



        <TextView
            android:id="@+id/item_salary_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Dr.Ahmed Tharwat"/>

        <TextView
            android:id="@+id/item_patient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:visibility="gone"
            android:textStyle="bold"
            tools:text="Dr.Ahmed Tharwat"/>

        <TextView
            android:id="@+id/item_salary_sessions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textSize="12sp"
            tools:text="Sessions num(50)"/>


        <TextView
            android:id="@+id/item_salary_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textSize="12sp"
            tools:text="salary = 2500"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="end">

        <CheckBox
            android:id="@+id/item_salary_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_salary_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="14sp"/>
    </LinearLayout>




</RelativeLayout>