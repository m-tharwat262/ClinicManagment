<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/final_primary_button"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="start"
        android:orientation="vertical" >



        <TextView
            android:id="@+id/item_other_payment_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Item Name"/>



        <TextView
            android:id="@+id/item_other_payment_number_of_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textSize="12sp"
            tools:text="Items Number : 2"/>

        <TextView
            android:id="@+id/item_other_payment_items_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textSize="12sp"
            tools:text="Cost : 200$"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_other_payment_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/item_icon"
            app:civ_circle_background_color="@color/color_white"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/text_color_gray" />


    </LinearLayout>




</RelativeLayout>