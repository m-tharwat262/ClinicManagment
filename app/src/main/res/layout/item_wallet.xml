<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/final_primary_button"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="start"
        android:orientation="vertical" >



        <TextView
            android:id="@+id/item_wallet_patient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Patient name"/>



        <TextView
            android:id="@+id/item_wallet_session_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textSize="12sp"
            tools:text="Sessions num(50)"/>


        <TextView
            android:id="@+id/item_wallet_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textSize="12sp"
            tools:text="Dept = 2500"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_wallet_profile_pic_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/person_placeholder"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/mode_color_white_3" />


    </LinearLayout>




</RelativeLayout>